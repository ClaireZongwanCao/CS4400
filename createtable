CREATE TABLE USER(
    PASSWORD varchar(50) NOT NULL,
    USERNAME varchar(50) NOT NULL,
    **TYPE varchar(50) NOT NULL,
    PRIMARY KEY(USERNAME)
);

CREATE TABLE STUDENT/FACULTY (
    USERNAME varchar(50) NOT NULL,
    NAME varchar(50) NOT NULL,
    D.O.B date NOT NULL,
    GENDER char(1) NOT NULL
    IS DEBARRED boolean NOT NULL,
    EMAIL varchar(50) NOT NULL,
    ADDRESS varchar(100) NOT NULL,
    IS FACULTY boolean NOT NULL,
    PENALTY decimal(10,2) NOT NULL,
    DEPT varchar(50) NULL,
    PRIMARY KEY(USERNAME),
    FOREIGN KEY(USERNAME) REFERENCES USER(USERNAME)
)

CREATE TABLE ISSUES (
    USERNAME varchar(50) NOT NULL,
    ISBN char(10) NOT NULL,
    COPY# int NOT NULL,
    ISSUE_ID int NOT NULL,
    DATE OF ISSUE date NOT NULL,
    EXTENSION DATE date NOT NULL,
    RETURN DATE date NOT NULL,
    COUNT OF EXTENSIONS int NOT NULL,
    PRIMARY KEY(USERNAME, ISBN, COPY#),
    FOREIGN KEY(USERNAME) REFERENCES STUDENT/FACULTY(USERNAME),
    FOREIGN KEY(ISBN) REFERENCES BOOK(ISBN)
);

CREATE TABLE BOOK COPY (
    ISBN char(10) NOT NULL,
    COPY# int NOT NULL,
    IS ON HOLD boolean NOT NULL,
    IS CHECKED OUT boolean NOT NULL,
    IS DAMAGED boolean NOT NULL,
    FUTURE REQUESTER varchar(50) NULL,
    PRIMARY KEY(ISBN),
    FOREIGN KEY(ISBN) REFERENCES BOOK(ISBN),
    FOREIGN KEY(FUTURE REQUESTER) REFERENCES STUDENT/FACULTY(USERNAME)
);

CREATE TABLE BOOK (
    AUTHOR/S varchar(50) NOT NULL,
    TITLE varchar(50) NOT NULL,
    ISBN char(10) NOT NULL,
    COST decimal(10,2) NOT NULL,
    IS 'BOOK ON RESERVE' boolean NOT NULL,
    EDITION int NOT NULL,
    PUBLISHER varchar(50) NOT NULL,
    PLACE OF PUBLI. varchar(100) NOT NULL,
    COPYRIGHT YR. int NOT NULL,
    SHELF# int NOT NULL,
    SUBJECT NAME varchar(50) NOT NULL,
    PRIMARY KEY(ISBN),
    FOREIGN KEY(SHELF#) REFERENCES SHELF(SHELF#),
    FOREIGN KEY(SUBJECT NAME) REFERENCES SUBJECT(NAME)
)

CREATE TABLE SHELF (
    SHELF# int NOT NULL,
    AISLE# int NOT NULL,
    FLOOR# int NOT NULL,
    PRIMARY KEY(SHELF#),
    FOREIGN KEY(FLOOR#) REFERENCES FLOOR(FLOOR#)
)

CREATE TABLE FLOOR (
    FLOOR# int NOT NULL,
    #STUD ASSIST. int NOT NULL,
    #OF COPIERS int NOT NULL,
    PRIMARY KEY(FLOOR#)
)

CREATE TABLE SUBJECT (
    #JOURNALS int NOT NULL,
    KEYWORD/S varchar(50) NOT NULL,
    NAME varchar(50) NOT NULL,
    FLOOR# int NOT NULL,
    PRIMARY KEY(NAME),
    FOREIGN KEY(FLOOR#) REFERENCES FLOOR(FLOOR#)
)
